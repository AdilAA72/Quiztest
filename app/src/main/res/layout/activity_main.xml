<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"

>

<TextView
    android:id="@+id/activity_main_greeting_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="50dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="24dp"
    android:ems="10"
    android:text="Entrer votre  nom: "
    android:selectAllOnFocus="true" />



<EditText
    android:id="@+id/activity_main_name_input"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/activity_main_greeting_txt"
    android:layout_alignStart="@+id/activity_main_greeting_txt"
    android:layout_below="@+id/activity_main_greeting_txt"
    android:layout_marginTop="18dp"
    android:ems="10"
    android:hint="name" />

<Button
    android:id="@+id/activity_main_play_btn"
    style="@android:style/Widget.Button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/activity_main_name_input"
    android:layout_marginTop="62dp"
    android:text="GO"
    android:textSize="16sp"
    android:textStyle="normal|bold" />
</RelativeLayout>
